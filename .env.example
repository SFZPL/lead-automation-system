POST_CONTACT_LOOKBACK_HOURS=72

# Maqsam transcription service
MAQSAM_API_KEY=your-maqsam-api-key
MAQSAM_BASE_URL=https://api.maqsam.com
MAQSAM_TIMEOUT=30
MAQSAM_CALL_ID_KEYS=maqsam_call_id,integration_call_id,call_uuid,external_id,id

# SMTP email delivery (optional, falls back to dry-run logging)
EMAIL_SMTP_HOST=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your-smtp-username
EMAIL_SMTP_PASSWORD=your-smtp-password
EMAIL_FROM_ADDRESS=you@example.com
EMAIL_SMTP_USE_TLS=1

# OpenAI
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o-mini
