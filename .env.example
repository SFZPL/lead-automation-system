# Set to 0 to enforce SSL verification
ODOO_INSECURE_SSL=1

# Filter unenriched leads by salesperson (optional)
SALESPERSON_NAME=Dareen Fuqaha

# Apollo API configuration
APOLLO_API_KEY=QBSjgE4j9Effi9qYqOr2sA
APOLLO_BASE_URL=https://api.apollo.io/v1
APOLLO_NO_ANSWER_DISPOSITIONS=no answer,missed
APOLLO_PAGE_SIZE=25
APOLLO_MAX_PAGES=4
